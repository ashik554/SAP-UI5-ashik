<mvc:View xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
	controllerName="emc.hr.payroll.controller.View2"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	>
    <Page 
    title="View 2" showNavButton="true" navButtonPress="onBack">
    <!-- <Button text="Back" icon="sap-icon://arrow-left"
    press="onBack"></Button> -->
    <content>
        <ObjectHeader intro='{healthBenefit}' title='{name}' icon='{image}' number='{price}' numberUnit='{curr}'></ObjectHeader>
        <Text text='{name}' />
        <IconTabBar >
            <items>
                <IconTabFilter icon='sap-icon://warning' text='More Info' >
                <form:SimpleForm >
                    <Label text='Color'/>
                    <Text text='{color}'/>
                    <Label text='Taste'/>
                    <Text text='{taste}'/>
                    <Label text='Price'/>
                    <Text text="{
                        parts:[{path:'price'},{path:'curr'}],
                        formatter:'.formatter.formatCurrency'
                    }"/>
                    <Label text='Season'/>
                    <Text text='{season}'/>
                </form:SimpleForm>
                </IconTabFilter>
                <IconTabFilter iconColor='Positive' icon='sap-icon://supplier' text='Supplier'></IconTabFilter>
                <IconTabFilter iconColor='Negative' icon='sap-icon://home' text='Cities'>
                    <Select items="{/cities}">
                    <core:Item text='{cityName}' key='{cityName}'/>
                    </Select>
                    <ComboBox items="{/cities}">
                    <core:Item text='{cityName}' key='{cityName}'/>
                    </ComboBox>
                    <MultiComboBox items="{/cities}">
                    <core:Item text='{cityName}' key='{cityName}'/>
                    </MultiComboBox>
                </IconTabFilter>
            </items>
        </IconTabBar>
    </content>
<footer>
    <Toolbar >
        <ToolbarSpacer></ToolbarSpacer>
        <Button text="Order" type="Emphasized"></Button>
        <Button text="Cancell" type="Reject"></Button>
    
    </Toolbar>
</footer>
</Page>
</mvc:View> 